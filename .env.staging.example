# ============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env for staging environment
# Staging should mirror production as closely as possible
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

APP_NAME="HEAC CMS (Staging)"
APP_ENV=staging
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://staging.heac.example.com
FORCE_HTTPS=true

# ============================================================================
# LOCALIZATION
# ============================================================================

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
SUPPORTED_LOCALES=en,ar

# ============================================================================
# SECURITY
# ============================================================================

BCRYPT_ROUNDS=12
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.staging.heac.example.com

# ============================================================================
# LOGGING
# ============================================================================

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=info

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_CONNECTION=mysql
DB_HOST=staging-database-host.example.com
DB_PORT=3306
DB_DATABASE=heac_cms_staging
DB_USERNAME=heac_staging_user
DB_PASSWORD=STAGING_DATABASE_PASSWORD

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

CACHE_STORE=redis
CACHE_PREFIX=heac_staging_cache
CACHE_TTL=1800

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=staging-redis-host.example.com
REDIS_PASSWORD=STAGING_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

QUEUE_CONNECTION=redis
QUEUE_NAME=staging

# ============================================================================
# FILESYSTEM & STORAGE
# ============================================================================

FILESYSTEM_DISK=s3

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=heac-cms-staging
AWS_URL=https://heac-cms-staging.s3.amazonaws.com

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=MAILTRAP_USERNAME
MAIL_PASSWORD=MAILTRAP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="staging@heac.example.com"
MAIL_FROM_NAME="HEAC CMS Staging"
CONTACT_NOTIFICATION_EMAIL=dev-team@heac.example.com

# ============================================================================
# GOOGLE ANALYTICS
# ============================================================================

GOOGLE_ANALYTICS_ID=G-STAGING-ID
GOOGLE_TAG_MANAGER_ID=

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

BACKUP_DISK=s3
BACKUP_NOTIFICATION_EMAIL=dev-team@heac.example.com
BACKUP_ARCHIVE_PASSWORD=STAGING_BACKUP_PASSWORD
AWS_BACKUP_BUCKET=heac-cms-staging-backups
BACKUP_RETENTION_DAYS=14

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp,svg
IMAGE_QUALITY=85
GENERATE_WEBP=true

# ============================================================================
# RATE LIMITING
# ============================================================================

CONTACT_FORM_RATE_LIMIT=5
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=10

# ============================================================================
# SECURITY HEADERS
# ============================================================================

CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# ============================================================================
# ADMIN PANEL (FILAMENT)
# ============================================================================

FILAMENT_PATH=admin

# ============================================================================
# TWO-FACTOR AUTHENTICATION
# ============================================================================

TWO_FACTOR_ENABLED=false
TWO_FACTOR_ISSUER="HEAC CMS Staging"

# ============================================================================
# PERFORMANCE
# ============================================================================

QUERY_CACHE_ENABLED=true
PAGE_CACHE_ENABLED=true
PAGE_CACHE_TTL=10
OPCACHE_ENABLED=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=false
