# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your production values
# IMPORTANT: Never commit .env file to version control
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

APP_NAME="HEAC CMS"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://heac.example.com
FORCE_HTTPS=true

# ============================================================================
# LOCALIZATION
# ============================================================================

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
SUPPORTED_LOCALES=en,ar

# ============================================================================
# SECURITY
# ============================================================================

BCRYPT_ROUNDS=12
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.heac.example.com
SANCTUM_STATEFUL_DOMAINS=heac.example.com

# ============================================================================
# LOGGING
# ============================================================================

LOG_CHANNEL=stack
LOG_STACK=daily,slack
LOG_LEVEL=error
LOG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_CONNECTION=mysql
DB_HOST=your-database-host.example.com
DB_PORT=3306
DB_DATABASE=heac_cms_production
DB_USERNAME=heac_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD_HERE

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

CACHE_STORE=redis
CACHE_PREFIX=heac_prod_cache
CACHE_TTL=3600

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-host.example.com
REDIS_PASSWORD=REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

QUEUE_CONNECTION=redis
QUEUE_NAME=production

# ============================================================================
# FILESYSTEM & STORAGE
# ============================================================================

FILESYSTEM_DISK=s3

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=heac-cms-production
AWS_URL=https://heac-cms-production.s3.amazonaws.com
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@heac.example.com
MAIL_PASSWORD=MAIL_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@heac.example.com"
MAIL_FROM_NAME="HEAC CMS"
CONTACT_NOTIFICATION_EMAIL=admin@heac.example.com

# ============================================================================
# GOOGLE ANALYTICS
# ============================================================================

GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# ============================================================================
# SEO CONFIGURATION
# ============================================================================

SEO_DEFAULT_DESCRIPTION="Higher Education Accreditation Commission"
SEO_DEFAULT_KEYWORDS="HEAC, higher education, accreditation"
SEO_DEFAULT_OG_IMAGE=/images/og-default.jpg
SITEMAP_UPDATE_FREQUENCY=daily

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

BACKUP_DISK=s3
BACKUP_NOTIFICATION_EMAIL=admin@heac.example.com
BACKUP_ARCHIVE_PASSWORD=STRONG_BACKUP_PASSWORD
AWS_BACKUP_BUCKET=heac-cms-backups
BACKUP_RETENTION_DAYS=30

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp,svg
IMAGE_QUALITY=85
GENERATE_WEBP=true

# ============================================================================
# RATE LIMITING
# ============================================================================

CONTACT_FORM_RATE_LIMIT=3
API_RATE_LIMIT=60
LOGIN_RATE_LIMIT=5

# ============================================================================
# SECURITY HEADERS
# ============================================================================

CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# ============================================================================
# ADMIN PANEL (FILAMENT)
# ============================================================================

FILAMENT_PATH=admin
FILAMENT_DOMAIN=

# ============================================================================
# TWO-FACTOR AUTHENTICATION
# ============================================================================

TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="HEAC CMS"

# ============================================================================
# HONEYPOT SPAM PROTECTION
# ============================================================================

HONEYPOT_FIELD_NAME=website
HONEYPOT_MIN_TIME=3

# ============================================================================
# PERFORMANCE
# ============================================================================

QUERY_CACHE_ENABLED=true
PAGE_CACHE_ENABLED=true
PAGE_CACHE_TTL=15
OPCACHE_ENABLED=true

# ============================================================================
# DEVELOPMENT TOOLS (DISABLED IN PRODUCTION)
# ============================================================================

TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# ============================================================================
# VITE CONFIGURATION
# ============================================================================

VITE_APP_NAME="HEAC CMS"
