# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application Name (displayed in admin panel and emails)
APP_NAME="HEAC CMS"

# Environment: local, staging, production
APP_ENV=local

# Application Key (generate with: php artisan key:generate)
APP_KEY=

# Debug Mode (MUST be false in production)
APP_DEBUG=true

# Timezone
APP_TIMEZONE=UTC

# Application URL (include protocol, no trailing slash)
APP_URL=http://localhost

# Force HTTPS (set to true in production)
FORCE_HTTPS=false

# ============================================================================
# LOCALIZATION
# ============================================================================

# Default Language
APP_LOCALE=en

# Fallback Language
APP_FALLBACK_LOCALE=en

# Faker Locale (for testing)
APP_FAKER_LOCALE=en_US

# Supported Languages (comma-separated)
SUPPORTED_LOCALES=en,ar

# ============================================================================
# MAINTENANCE MODE
# ============================================================================

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# ============================================================================
# SECURITY
# ============================================================================

# Bcrypt Rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# CSRF Token Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# ============================================================================
# LOGGING
# ============================================================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Connection: mysql, pgsql, sqlite
DB_CONNECTION=mysql

# MySQL/PostgreSQL Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=heac_cms
DB_USERNAME=root
DB_PASSWORD=

# Database Prefix (optional)
DB_PREFIX=

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache Driver: redis, memcached, file, database
CACHE_STORE=redis
CACHE_PREFIX=heac_cms_cache

# Cache TTL (in seconds)
CACHE_TTL=3600

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Redis Database Numbers
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

# Queue Connection: redis, database, sync
QUEUE_CONNECTION=redis

# Queue Name
QUEUE_NAME=default

# ============================================================================
# FILESYSTEM & STORAGE
# ============================================================================

# Default Filesystem Disk: local, public, s3
FILESYSTEM_DISK=public

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================

# Mail Driver: smtp, sendmail, mailgun, ses, postmark, log
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@heac.example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Contact Form Notification Email
CONTACT_NOTIFICATION_EMAIL=admin@heac.example.com

# Mailgun Configuration (if using Mailgun)
MAILGUN_DOMAIN=
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.mailgun.net

# Postmark Configuration (if using Postmark)
POSTMARK_TOKEN=

# SES Configuration (if using AWS SES)
AWS_SES_KEY=
AWS_SES_SECRET=
AWS_SES_REGION=us-east-1

# ============================================================================
# BROADCASTING
# ============================================================================

BROADCAST_CONNECTION=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ============================================================================
# GOOGLE ANALYTICS
# ============================================================================

# Google Analytics 4 Measurement ID
GOOGLE_ANALYTICS_ID=

# Google Tag Manager ID (optional)
GOOGLE_TAG_MANAGER_ID=

# ============================================================================
# SEO CONFIGURATION
# ============================================================================

# Default Meta Description
SEO_DEFAULT_DESCRIPTION="Higher Education Accreditation Commission"

# Default Meta Keywords
SEO_DEFAULT_KEYWORDS="HEAC, higher education, accreditation"

# Default OG Image
SEO_DEFAULT_OG_IMAGE=/images/og-default.jpg

# Sitemap Update Frequency
SITEMAP_UPDATE_FREQUENCY=daily

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup Disk: local, s3
BACKUP_DISK=local

# Backup Notification Email
BACKUP_NOTIFICATION_EMAIL=admin@heac.example.com

# Backup Archive Password (optional, for encryption)
BACKUP_ARCHIVE_PASSWORD=

# AWS S3 Backup Bucket (if using S3 for backups)
AWS_BACKUP_BUCKET=

# Backup Retention Days
BACKUP_RETENTION_DAYS=30

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

# Maximum Upload Size (in KB)
MAX_UPLOAD_SIZE=10240

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx

# Allowed Image Types (comma-separated)
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp,svg

# Image Quality (1-100)
IMAGE_QUALITY=85

# Generate WebP Images
GENERATE_WEBP=true

# ============================================================================
# RATE LIMITING
# ============================================================================

# Contact Form Rate Limit (requests per minute)
CONTACT_FORM_RATE_LIMIT=3

# API Rate Limit (requests per minute)
API_RATE_LIMIT=60

# Login Rate Limit (attempts per minute)
LOGIN_RATE_LIMIT=5

# ============================================================================
# SECURITY HEADERS
# ============================================================================

# Content Security Policy
CSP_ENABLED=true

# HSTS Max Age (in seconds)
HSTS_MAX_AGE=31536000

# ============================================================================
# ADMIN PANEL (FILAMENT)
# ============================================================================

# Admin Panel Path
FILAMENT_PATH=admin

# Admin Panel Domain (optional)
FILAMENT_DOMAIN=

# ============================================================================
# TWO-FACTOR AUTHENTICATION
# ============================================================================

# Enable 2FA
TWO_FACTOR_ENABLED=false

# 2FA Issuer Name
TWO_FACTOR_ISSUER="${APP_NAME}"

# ============================================================================
# HONEYPOT SPAM PROTECTION
# ============================================================================

# Honeypot Field Name
HONEYPOT_FIELD_NAME=website

# Minimum Form Fill Time (in seconds)
HONEYPOT_MIN_TIME=3

# ============================================================================
# PERFORMANCE
# ============================================================================

# Enable Query Caching
QUERY_CACHE_ENABLED=true

# Enable Page Caching
PAGE_CACHE_ENABLED=true

# Page Cache TTL (in minutes)
PAGE_CACHE_TTL=15

# Enable OPcache
OPCACHE_ENABLED=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Laravel Telescope (set to false in production)
TELESCOPE_ENABLED=false

# Laravel Debugbar (set to false in production)
DEBUGBAR_ENABLED=false

# ============================================================================
# VITE CONFIGURATION
# ============================================================================

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
